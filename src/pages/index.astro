---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Character from '../components/Character.astro';
import CharacterInfo from '../components/CharacterInfo.astro';

const selectCharacter = (name:string) => `public/img/characters/${name}.png`
---

<Layout title="Hollow Knight Selector">
	<main class="relative flex justify-center text-center items-center size-full h-screen bg-center bg-cover bg-no-repeat" style="background-image: url(/public/img/hk_background.jpeg);">
		<div class = "absolute inset-0 bg-black bg-opacity-50 z-0"></div>
		<div class = "z-10 w-full">
			<div class="absolute bottom-10 left-10 w-[500px]">
				<img src="/public/img/hk_logo.png" alt = "">
			</div>
			<section class = "w-full flex justify-center relative">
				<CharacterInfo
					characterName='The Knight'
					characterDescription='jollow na'
				/>
				<Character 
					characterImg={selectCharacter("the_knight")}
					characterName='The Knight'/>
			</section>
		</div>
	</main>
</Layout>