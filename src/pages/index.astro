---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Character from '../components/Character.astro';
import CharacterInfo from '../components/CharacterInfo.astro';
import selectCharacter from '../utils/selectCharacters';
---

<Layout title="Hollow Knight Selector">
	<main class="relative flex justify-center text-center items-center size-full h-screen bg-center bg-cover bg-no-repeat" style="background-image: url(/img/hk_background.jpeg);">
		<div class = "absolute inset-0 bg-black bg-opacity-50 z-0"></div>
		<div class = "z-10 w-full">
			<div class="absolute bottom-10 left- w-[500px]">
				<img src="/img/hk_logo.png" alt = "">
			</div>
			<section class = "flex justify-center relative">
				<div>
					<CharacterInfo
						characterName='The Knight'
						characterDescription='The Knight is a Vessel, a mystical insectoid being created by the higher beings The Pale King and The White Lady. They are made of Void and were born in The Abyss, a limbo-like place deep beneath Hallownest.'
						/>
				</div>
				<Character 
					characterImg={selectCharacter("the_knight")}
					characterName='The Knight'/>
			</section>
		</div>
	</main>
</Layout>